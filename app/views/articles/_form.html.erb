<%= form_with model: article do |form| %>
  <div>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </p>
  </div>
  <div>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </p>
  </div>
  <div>
    <p>
      <%= form.label :status %><br>
      <%= form.select :status, select: ['public', 'private', 'archived'], selected: 'public' %>
    </p>
  </div>
  <div>    
    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>

<ul>
<li><%= link_to 'Back to all articles', articles_path %></li>
</ul>